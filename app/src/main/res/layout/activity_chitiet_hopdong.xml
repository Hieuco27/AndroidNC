<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_gravity="center"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_maHopDong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#PH29166"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000" />

    <!-- Bố cục ngang chứa ảnh và phần thông tin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_home1"
            android:layout_marginEnd="16dp"
            android:contentDescription="Icon hợp đồng" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hoTen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên: Nguyễn Văn"
                android:textSize="20dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_phong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng: Trọ A4"
                android:textSize="20dp"
                android:textColor="#FF5722"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ngayKetThuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Ngày kết thúc: 20/11/2023"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_ngayBatDau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        android:text="Ngày ở: 20/07/2023" />

    <TextView
        android:id="@+id/tv_thoiHan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Thời hạn: 4 tháng" />

    <TextView
        android:id="@+id/tv_ngayLap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Ngày lập hợp đồng: ..." />

    <TextView
        android:id="@+id/tv_tienCoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiền cọc: 800000"
        android:textSize="20dp"

        android:textColor="#FF0000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_tinhTrang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Tình trạng hợp đồng: Còn hợp đồng"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnDong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐÓNG"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF" />
</LinearLayout>
