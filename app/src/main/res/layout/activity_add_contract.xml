<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="28sp"
        android:fontFamily="serif"
        android:text="Tạo Hợp Đồng"
        android:textColor="@color/blue"
        android:padding="10dp"
        android:paddingBottom="20dp"
        android:background="@drawable/btnmain"
         />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/edt_sophong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số phòng"
                android:padding="10dp"
                android:textSize="20dp"
                android:fontFamily="cursive"
                android:background="@drawable/hoadon"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/spinner_tenkhach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chọn khách"
                android:padding="10dp"
                android:fontFamily="cursive"
                android:background="@drawable/hoadon"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/edt_startdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày bắt đầu"
                android:padding="10dp"
                android:fontFamily="cursive"
                android:textSize="20dp"

                android:background="@drawable/hoadon"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/edt_enddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày kết thúc"
                android:padding="10dp"
                android:textSize="20dp"
                android:fontFamily="cursive"

                android:background="@drawable/hoadon"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/edt_nguoio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số người ở"
                android:padding="10dp"
                android:textSize="20dp"
                android:fontFamily="cursive"
                android:background="@drawable/hoadon"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/edt_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số lượng xe"
                android:padding="10dp"
                android:textSize="20dp"
                android:fontFamily="cursive"

                android:background="@drawable/hoadon"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/edt_coc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tiền đặt cọc"
                android:padding="10dp"
                android:textSize="20dp"
                android:fontFamily="cursive"
                android:background="@drawable/hoadon"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btn_themcontract"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thêm"
                    android:backgroundTint="@color/pink"
                    android:textColor="@android:color/white"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/btn_huy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hủy"
                    android:backgroundTint="@color/pink"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>