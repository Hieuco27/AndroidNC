<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo Hợp Đồng"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/blue"
            android:padding="12dp"
            android:background="@drawable/btnmain" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnhopdong">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số phòng"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edt_soPhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hoadon"
                android:hint="P101"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/btnhopdong">

                <!-- Tên người thuê -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên người thuê"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spinnerTenkhach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hoadon"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"/>

                <!-- Thời hạn hợp đồng -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày bắt đầu"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edt_Startdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="19/2/2022"
                    android:background="@drawable/hoadon"
                    android:padding="12dp"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"/>



                <!-- Ngày hết hợp đồng -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày hết hợp đồng"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edt_Enddate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="20/11/2023"
                    android:background="@drawable/hoadon"
                    android:padding="12dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="10dp"/>

                <!-- Ngày hết hợp đồng -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số người ở"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edt_Nguoio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" 2"
                    android:background="@drawable/hoadon"
                    android:padding="12dp"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"/>
                <!-- Ngày hết hợp đồng -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng xe "
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edt_Car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="3 "
                    android:background="@drawable/hoadon"
                    android:padding="12dp"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"/>
                <!-- Tiền cọc -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiền cọc"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edtTienCoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="2.000.000 đ"
                    android:inputType="number"
                    android:background="@drawable/hoadon"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Còn hợp đồng"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_Themcontract"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:backgroundTint="@color/expired"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
