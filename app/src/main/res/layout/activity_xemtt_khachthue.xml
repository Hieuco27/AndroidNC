<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_gravity="center"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_khachId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã khách: KH001"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/img_khach"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_person"
            android:layout_marginEnd="16dp"
            android:contentDescription="Ảnh đại diện khách" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tenKhach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên: Nguyễn Văn A"
                android:textSize="20sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_sdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SĐT: 0123456789"
                android:textSize="20sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_cccd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CCCD: 123456789000"
                android:textSize="20sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_soPhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Phòng: A101"
                android:textColor="#FF5722"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnDong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐÓNG"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp" />
</LinearLayout>
